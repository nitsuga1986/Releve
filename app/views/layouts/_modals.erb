<% if @show_confirm_form || (user_signed_in? && !current_user.confirmed?) %>
	<!-- Confirmation Modal -->
	<div class="modal fade" id="modal2" tabindex="-1" role="dialog" aria-labelledby="ConfirmEmail" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content text-releve">
				  <div class="modal-header bg-light-releve">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="exampleModalLabel">Confirma tus datos</h4>
				  </div>
				<%= form_for(current_user, as: 'user', url: finish_signup_path(current_user)) do |f| %>
				  <div class="modal-body">
					  <% if @show_errors %>
						<div class="alert alert-danger" role="alert"><strong>Algunos datos no son correctos</strong>, por favor verifique la información ingresada</div>
					  <% end %>
					  <div class="form-group">
						<label for="recipient-name" class="control-label">Dirección de correo:</label>
						<%= f.email_field :email, value: '', autofocus: true, class: 'form-control' , placeholder: 'direccion@correo.com' %>
					  </div>
					  <div class="form-group">
						<label for="recipient-name" class="control-label">Teléfono:</label>
						<%= f.phone_field :telefono, value: '', class: 'form-control' , placeholder: '15-M1-CELU-L7R' %>
					  </div>
				  </div>
				  <div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<%= f.submit 'Confirmar', class: 'btn btn-primary' %>
				  </div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>
