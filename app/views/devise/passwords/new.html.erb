<div class="col-xs-12 col-sm-6 col-sm-offset-3">
	<%= devise_error_messages! %>
	<div class="panel panel-default devise-bs">
	  <div class="panel-heading">
		<h4><%= t('.forgot_your_password', :default => '¿Olvidó su contraseña?') %></h4>
	  </div>
	  <div class="panel-body">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
		  <div class="form-group">
			<%= f.label :email %>
			<%= f.email_field :email, autofocus: true, class: "form-control" %>
		  </div>

		  <%= f.submit t('.send_me_reset_password_instructions', :default => "Enviarme las instrucciones para actualizar la contraseña"), class: "btn btn-primary" %>
		<% end %>
	  </div>
	</div>
	<%= render "devise/shared/links" %>
</div>
