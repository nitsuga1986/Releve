<div class="col-xs-12 col-sm-6 col-sm-offset-3">
	<%= devise_error_messages! %>
	<div class="panel panel-default devise-bs">
	  <div class="panel-heading">
		<h4><%= t('.change_your_password', :default => 'Cambiar tu contrase単a') %></h4>
	  </div>
	  <div class="panel-body">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, role: "form" }) do |f| %>
		  <%= f.hidden_field :reset_password_token %>

		  <div class="form-group">
			<%= f.label :password, t('.new_password', :default => 'Nueva contrase単a') %>
			<%= f.password_field :password, autofocus: true, class: "form-control"  %>
		  </div>

		  <div class="form-group">
			<%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirmar la nueva contrase単a') %>
			<%= f.password_field :password_confirmation, class: "form-control"  %>
		  </div>

		  <%= f.submit t('.change_my_password', :default => 'Cambiar mi contrase単a'), class: "btn btn-primary" %>
		<% end %>
	  </div>
	</div>
	<%= render "devise/shared/links" %>
</div>
