<%= subtitle " - Desbloqueo" %>
<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
	<%= devise_error_messages! %>
	<div class="panel panel-default devise-bs">
	  <div class="panel-heading">
		<h4><%= t('.resend_unlock_instructions', :default => "Reenviar instruciones de desbloqueo") %></h4>
	  </div>
	  <div class="panel-body">
		<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, html: { role: "form" } }) do |f| %>
		  <div class="form-group">
			<%= f.label :email %>
			<%= f.email_field :email, autofocus: true, class: "form-control" %>
		  </div>
		  <%= f.submit t('.resend_unlock_instructions', :default => "Reenviar instruciones de desbloqueo"), class: "btn btn-primary"%>
		<% end %>
	  </div>
	</div>
	<%= render "devise/shared/links" %>
</div>
